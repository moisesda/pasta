algoritmo "Ex 3 Matriz"
// Função : somar linhas da matriz
// Autor : Moisés
// Data : 04/03/2024
// Seção de Declarações
var

   n, m, i, j : inteiro
   mat : vetor [0..9,0..9] de real
   linha : vetor [0..9] de real

inicio

      escreval
      escreval
      escreva ("   Digite a quantidade de linhas : ")
      leia(m)

      escreval
      escreval
      escreva ("   Digite a quantidade de colunas : ")
      leia(n)

      limpatela

      escreval
      escreval
      para i de 0 ate m-1 faca
      escreval("   Digite os elementos da ",i+1,"° linha : ")
      para j de 0 ate n-1 faca
      leia(mat[i,j])

      fimpara
      fimpara

   limpatela

   para i de 0 ate m-1 faca
      linha[i] <- 0

   para j de 0 ate n-1 faca
      linha[i] <- linha[i] + mat [i,j]

   fimpara
   fimpara

   limpatela

   escreval
   escreval
   escreval ("   Soma das linhas geradasd na matriz : ")
   para i de 0 ate m-1 faca
        escreval("   ",linha[i]:3:1)
        fimpara

fimalgoritmo
