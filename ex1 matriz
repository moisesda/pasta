algoritmo "ExMatriz"
// Função : pedir e mostrar uma matriz
// Autor : Moisés
// Data : 04/03/2024
// Seção de Declarações 
var

   m, n : inteiro # m = coluna / n = linha
   i, j : inteiro
   mat : vetor [0..4,0..4] de inteiro  # matris

inicio

      escreval
      escreval
      escreva ("   Digite a quantidade desejada de linhas : ")
      leia (m)
      
      escreval
      escreva ("   Digite a quantidade desejada de colunas : ")
      leia (n)
      
      limpatela
      
      para i de 0 ate m-1 faca
      para j de 0 ate n-1 faca

      escreva ("   Elemento [", i, " / ", j, " ] : ")
      leia (mat[i,j])
      
      fimpara
      fimpara
      
      escreval
      escreval
      escreval("   Matriz digitada: ")
      escreval

      para i de 0 ate n-1 faca
      para j de 0 ate m-1 faca

      escreva("  | ",mat[i,j])
      
      fimpara
      
      escreval
      
      fimpara
      
fimalgoritmo
